<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000519"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/bottom_nav">

        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your Country"
            android:background="@color/colorPrimary"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_above="@id/SerachView"
            android:textColor="@color/cardview_light_background"
            android:gravity="top"
            tools:ignore="RtlCompat" />

        <android.support.v7.widget.SearchView
            android:id="@+id/SerachView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:goIcon="@android:drawable/ic_menu_send"
            app:searchHintIcon="@drawable/ic_search_black_24dp"
            app:searchIcon="@drawable/ic_search_black_24dp"
            app:theme="@style/AppSearchView"
            app:voiceIcon="@drawable/ic_keyboard_voice_black_24dp" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/search" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        app:itemTextColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/cardview_light_background"
        app:menu="@menu/bottom_navigation"/>
</RelativeLayout>