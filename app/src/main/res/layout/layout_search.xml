<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000519"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/editCountry"
                android:textSize="20dp"
                android:inputType="textCapWords"
                android:gravity="center"/>
            <Button
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:background="@drawable/ic_search_black_24dp"
                android:id="@+id/btn_submit"
                android:gravity="center"/>
        </LinearLayout>



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/Country"
        android:textSize="40dp"
        android:text="Country"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
        android:paddingBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="New Death"
                android:textColor="#F10202"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/New_Death"
                android:textColor="#F10202"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="New Infected"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/New_Infected"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="Total Recover"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/Total_Recover"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="Total Tests"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/Total_Tests"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="Total Infacted"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/Total_Infected"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="Total Death"
                android:gravity="center"/>

            <TextView
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:id="@+id/Total_Death"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav"
        app:itemTextColor="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"/>

</RelativeLayout>